<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>E-BOOK JESTRI</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body { font-family: 'Segoe UI', Arial, sans-serif; margin: 0; padding-bottom: 80px; background-color: #fcfcfc; }
        
        /* Navbar Atas */
        .navbar { display: flex; align-items: center; padding: 12px 15px; background: white; border-bottom: 1px solid #eee; position: sticky; top: 0; z-index: 1000; }
        .btn-menu { background: #007bff; color: white; border: none; padding: 8px 16px; border-radius: 4px; font-weight: bold; cursor: pointer; }
        .brand-title { flex-grow: 1; text-align: center; font-size: 20px; font-weight: bold; margin-right: 60px; }

        /* Sidebar Menu */
        .sidebar { height: 100%; width: 0; position: fixed; z-index: 2000; top: 0; left: 0; background-color: white; overflow-x: hidden; transition: 0.3s; box-shadow: 2px 0 10px rgba(0,0,0,0.1); }
        .sidebar-content { padding-top: 10px; }
        .close-btn { font-size: 24px; padding: 10px 20px; cursor: pointer; color: #ff4d4d; display: block; text-align: right; }
        .menu-item { padding: 12px 25px; text-decoration: none; font-size: 15px; color: #333; display: flex; align-items: center; gap: 10px; border-bottom: 1px solid #f5f5f5; cursor: pointer; }
        .menu-header { padding: 15px 25px 5px; font-size: 12px; font-weight: bold; color: #007bff; text-transform: uppercase; letter-spacing: 1px; }

        /* Donate Section */
        .donate-container { text-align: center; padding: 25px 0; }
        .btn-donate { background: #ff4d4d; color: white; padding: 12px 35px; border-radius: 30px; text-decoration: none; font-weight: bold; display: inline-flex; align-items: center; gap: 8px; box-shadow: 0 4px 15px rgba(255, 77, 77, 0.3); border: none; cursor: pointer; font-size: 16px; }

        /* Search Section */
        .search-section { text-align: center; padding: 0 20px 20px; }
        .search-label { font-weight: bold; font-size: 18px; margin-bottom: 15px; display: block; }
        .search-box { display: flex; max-width: 400px; margin: 0 auto; border: 2px solid #444; border-radius: 10px; overflow: hidden; background: white; }
        .search-box input { flex: 1; padding: 14px; border: none; outline: none; font-size: 16px; }
        .search-box button { background: #444; color: white; border: none; padding: 0 18px; cursor: pointer; }

        /* Footer Sosmed */
        .footer-nav { position: fixed; bottom: 0; width: 100%; background: #1a1a1a; display: flex; justify-content: space-around; padding: 12px 0; z-index: 1000; }
        .footer-nav a { text-decoration: none; color: #fff; font-size: 12px; display: flex; flex-direction: column; align-items: center; opacity: 0.8; }
        .footer-nav i { font-size: 24px; margin-bottom: 4px; }
    </style>
</head>
<body>

    <div id="mySidebar" class="sidebar">
        <span class="close-btn" onclick="closeNav()">&times;</span>
        <div class="sidebar-content">
            <a href="/" class="menu-item" style="color: #007bff; font-weight: bold;">
                <i class="fa fa-home"></i> Rumah
            </a>
            
            <div class="menu-header">Genre</div>
            <a onclick="menuFilter('Semua')" class="menu-item">Semua Buku</a>
            <a onclick="menuFilter('Fiksi')" class="menu-item">Fiksi</a>
            <a onclick="menuFilter('Edukasi')" class="menu-item">Edukasi</a>
            <a onclick="menuFilter('Teknologi')" class="menu-item">Teknologi</a>
            <a onclick="menuFilter('Bisnis')" class="menu-item">Bisnis</a>

            <div class="menu-header">Lainnya</div>
            <a onclick="fokusCari()" class="menu-item"><i class="fa fa-search"></i> Mencari</a>
            <a onclick="menuFilter('Rilisan Baru')" class="menu-item"><i class="fa fa-bolt"></i> Rilisan Baru</a>
            <a onclick="menuFilter('Penulis')" class="menu-item"><i class="fa fa-pen-nib"></i> Penulis</a>
        </div>
    </div>

    <div class="navbar">
        <button class="btn-menu" onclick="openNav()">Menu</button>
        <div class="brand-title">E-BOOK JESTRI</div>
    </div>

    <div class="donate-container">
        <a href="https://link.dana.id/qr/8u8o6t3" target="_blank" class="btn-donate" onclick="gotoDana()">
            <i class="fa fa-heart"></i> DONATE
        </a>
    </div>

    <div class="search-section">
        <span class="search-label">Cari Buku / Penulis</span>
        <div class="search-box">
            <input type="text" id="searchInput" placeholder="Ketik judul buku...">
            <button onclick="fokusCari()"><i class="fa fa-search"></i></button>
        </div>
    </div>

    <div class="footer-nav">
        <a href="https://wa.me/6285189415489" target="_blank">
            <i class="fab fa-whatsapp"></i>
            <span>WhatsApp</span>
        </a>
        <a href="https://www.instagram.com/jesssstri?igsh=Ym1nb253bmtoZGd3" target="_blank">
            <i class="fab fa-instagram"></i>
            <span>Instagram</span>
        </a>
    </div>

    <script>
        function openNav() { document.getElementById("mySidebar").style.width = "260px"; }
        function closeNav() { document.getElementById("mySidebar").style.width = "0"; }

        function fokusCari() {
            closeNav();
            const input = document.getElementById("searchInput");
            input.focus();
            input.scrollIntoView({ behavior: 'smooth', block: 'center' });
        }

        function menuFilter(tag) {
            closeNav();
            alert("Membuka genre/menu: " + tag);
        }

        function gotoDana() {
            // Nomor Dana: 0895327806441
            // Menggunakan link universal Dana
            window.open("https://link.dana.id/qr/8u8o6t3", "_blank");
        }
    </script>

</body>
</html>

