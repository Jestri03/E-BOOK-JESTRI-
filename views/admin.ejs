<!DOCTYPE html>
<html>
<head>
    <title>Admin JESTRI Control</title>
    <style>
        body { font-family: sans-serif; padding: 20px; background: #2c3e50; color: white; }
        .form-box { background: #34495e; padding: 20px; border-radius: 10px; max-width: 500px; margin: auto; }
        input { width: 100%; padding: 10px; margin: 10px 0; border-radius: 5px; border: none; box-sizing: border-box; }
        button { width: 100%; padding: 10px; background: #e67e22; color: white; border: none; cursor: pointer; }
        table { width: 100%; margin-top: 20px; border-collapse: collapse; background: white; color: black; }
        th, td { border: 1px solid #ddd; padding: 10px; text-align: left; }
    </style>
</head>
<body>
    <div class="form-box">
        <h2>Tambah Buku Baru</h2>
        <form action="/tambah-buku" method="POST">
            <input type="text" name="judul" placeholder="Judul Buku" required>
            <input type="text" name="penulis" placeholder="Penulis" required>
            <input type="number" name="harga" placeholder="Harga (Hanya Angka)" required>
            <input type="text" name="gambar" placeholder="Link Gambar (URL)" required>
            <button type="submit">SIMPAN BUKU</button>
        </form>
        <br>
        <a href="/" style="color: #ecf0f1;">Lihat Web Pembeli</a> | <a href="/logout" style="color: #e74c3c;">Logout</a>
    </div>

    <table>
        <tr><th>Judul</th><th>Harga</th><th>Aksi</th></tr>
        <% buku.forEach(item => { %>
            <tr>
                <td><%= item.judul %></td>
                <td>Rp <%= Number(item.harga).toLocaleString('id-ID') %></td>
                <td><a href="/hapus-buku/<%= item._id %>" style="color:red;">Hapus</a></td>
            </tr>
        <% }) %>
    </table>
</body>
</html>

