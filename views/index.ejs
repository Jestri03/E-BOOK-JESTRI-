<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>E-BOOK JESTRI</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body { font-family: 'Segoe UI', sans-serif; margin: 0; background: #f8f9fa; padding-bottom: 100px; }
        .navbar { display: flex; align-items: center; padding: 10px 15px; background: white; border-bottom: 1px solid #ddd; position: sticky; top: 0; z-index: 1000; }
        .brand-title { flex-grow: 1; text-align: center; font-size: 18px; font-weight: bold; margin-right: 60px; }
        .btn-menu { background: #007bff; color: white; border: none; padding: 8px 15px; border-radius: 5px; font-weight: bold; cursor: pointer; }
        
        /* Sidebar */
        .sidebar { height: 100%; width: 0; position: fixed; z-index: 2000; top: 0; left: 0; background: white; overflow-x: hidden; transition: 0.3s; box-shadow: 2px 0 15px rgba(0,0,0,0.1); }
        .menu-item { padding: 15px 25px; text-decoration: none; font-size: 16px; color: #333; display: flex; align-items: center; gap: 12px; border-bottom: 1px solid #f9f9f9; }
        .menu-item:active { background: #f0f0f0; }

        /* Search & Grid */
        .search-box { display: flex; max-width: 350px; margin: 20px auto; border: 2px solid #333; border-radius: 8px; overflow: hidden; background: white; }
        .search-box input { flex: 1; padding: 12px; border: none; outline: none; }
        .book-grid { display: grid; grid-template-columns: repeat(2, 1fr); gap: 15px; padding: 15px; }
        .book-card { background: white; border-radius: 12px; box-shadow: 0 4px 10px rgba(0,0,0,0.05); overflow: hidden; text-align: center; border: 1px solid #eee; }
        .book-card img { width: 100%; height: 180px; object-fit: cover; }
        
        /* Floating Icons */
        .footer-social { position: fixed; bottom: 20px; right: 20px; display: flex; flex-direction: column; gap: 10px; z-index: 1000; }
        .social-icon { width: 50px; height: 50px; border-radius: 50%; display: flex; align-items: center; justify-content: center; color: white; font-size: 24px; text-decoration: none; box-shadow: 0 4px 10px rgba(0,0,0,0.2); }
    </style>
</head>
<body>

    <div id="mySidebar" class="sidebar">
        <span onclick="closeNav()" style="font-size: 35px; color: red; padding: 10px 20px; cursor: pointer; display: block; text-align: right;">&times;</span>
        <a href="/" class="menu-item"><i class="fa fa-home"></i> Rumah</a>
        <div style="padding: 15px 25px 5px; font-size: 12px; font-weight: bold; color: #007bff;">GENRE</div>
        <a href="/?genre=Semua Buku" class="menu-item">Semua Buku</a>
        <a href="/?genre=Fiksi" class="menu-item">Fiksi</a>
        <a href="/?genre=Edukasi" class="menu-item">Edukasi</a>
        <a href="/?genre=Teknologi" class="menu-item">Teknologi</a>
    </div>

    <div class="navbar">
        <button class="btn-menu" onclick="openNav()">Menu</button>
        <div class="brand-title">E-BOOK JESTRI</div>
    </div>

    <div style="text-align: center; padding: 20px;">
        <a href="https://link.dana.id/qr/8u8o6t3" style="background: #ff4d4d; color: white; padding: 10px 30px; border-radius: 25px; text-decoration: none; font-weight: bold;"><i class="fa fa-heart"></i> DONATE</a>
    </div>

    <form action="/" method="GET" class="search-box">
        <input type="text" name="search" placeholder="Cari judul buku...">
        <button type="submit" style="background: #333; color: white; border: none; padding: 0 15px;"><i class="fa fa-search"></i></button>
    </form>

    <div class="book-grid">
        <% if (books.length > 0) { %>
            <% books.forEach(book => { %>
                <div class="book-card">
                    <img src="/uploads/<%= book.image %>">
                    <div style="padding: 10px;">
                        <div style="font-weight: bold; font-size: 14px;"><%= book.title %></div>
                        <div style="color: #007bff; font-weight: bold; margin: 5px 0;">Rp <%= book.price %></div>
                        <button onclick="orderWA('<%= book.title %>', '<%= book.description %>', '<%= book.price %>')" style="background: #25d366; color: white; border: none; width: 100%; padding: 8px; border-radius: 5px; font-weight: bold; cursor: pointer;">
                            <i class="fab fa-whatsapp"></i> BELI
                        </button>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <p style="grid-column: span 2; text-align: center; color: #999; padding: 40px;">Buku tidak ditemukan.</p>
        <% } %>
    </div>

    <div class="footer-social">
        <a href="https://www.instagram.com/jesssstri?igsh=Ym1nb253bmtoZGd3" class="social-icon" style="background: linear-gradient(45deg, #f09433, #bc1888);"><i class="fab fa-instagram"></i></a>
        <a href="https://wa.me/6285189415489" class="social-icon" style="background: #25d366;"><i class="fab fa-whatsapp"></i></a>
    </div>

    <script>
        function openNav() { document.getElementById("mySidebar").style.width = "260px"; }
        function closeNav() { document.getElementById("mySidebar").style.width = "0"; }
        function orderWA(j, p, h) {
            const msg = `üõí *ORDER E-BOOK JESTRI*\n\nüìñ *JUDUL:* ${j}\n‚úçÔ∏è *PENULIS:* ${p}\nüí∞ *HARGA:* Rp ${h}\n\nSaya ingin membeli ebook ini. Mohon info cara pembayaran.`;
            window.open(`https://wa.me/6285189415489?text=${encodeURIComponent(msg)}`, '_blank');
        }
    </script>
</body>
</html>

